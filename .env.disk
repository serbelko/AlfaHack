# ---------- Postgres ----------
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=app_user
POSTGRES_PASSWORD=app_password
POSTGRES_DB=app_db

# Sync URL, если вдруг где-то используешь
DATABASE_URL=postgresql://app_user:app_password@db:5432/app_db

# Async URL для async SQLAlchemy (asyncpg)
ASYNC_DATABASE_URL=postgresql+asyncpg://app_user:app_password@db:5432/app_db

# ---------- JWT / Security ----------
# Время жизни access-токена в минутах
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Секрет для подписи JWT (в реальности сгенерируй длинную случайную строку)
SECRET_KEY=change_me_to_long_random_secret_key

# Минимальная длина пароля при регистрации
PASSWORD_MIN_LENGTH=8

# Алгоритм подписи JWT (совпадает с дефолтным в Settings)
ALGORITHM=HS256

# Опционально, можно использовать в клеймах JWT
ISSUER=auth-service
AUDIENCE=auth-clients

# ---------- Redis ----------
# Если используешь Redis для сессий/блэклиста токенов/кеша
REDIS_URL=redis://redis:6379/0


# Mock DB settings
MOCK_POSTGRES_USER=mock_user
MOCK_POSTGRES_PASSWORD=mock_password
MOCK_POSTGRES_DB=mock_db