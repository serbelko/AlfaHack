FROM python:3.13-slim
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/



# Change the working directory to the `app` directory
WORKDIR /app

# Copy pyproject.toml first to generate/update lockfile
COPY pyproject.toml ./

# Generate or update lockfile if needed, then install dependencies
RUN --mount=type=cache,target=/root/.cache/uv \
    uv lock && \
    uv sync --locked --no-install-project

# Copy the project into the image
ADD . /app

# Открываем порт
EXPOSE 8001

# Переменные окружения
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Команда запуска через uv run (использует Python из .venv)
CMD ["uv", "run", "uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "8001"]

